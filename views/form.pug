doctype html
html
  head
    title = title 
    link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap/dist/css/bootstrap.min.css")
  body
    .container
      h1 Update Custom Object Form | Integrating With HubSpot I Practicum
      a.btn.btn-primary(href="/") Return to the homepage
      form(action="/update-cobj" method="post")
        .mb-3
          label(for="firstName" class="form-label") First Name
          input(type="text" class="form-control" id="firstName" name="firstName" required)
          
        .mb-3
          label(for="lastName" class="form-label") Last Name
          input(type="text" class="form-control" id="lastName" name="lastName" required)
          
        .mb-3
          label(for="email" class="form-label") Email
          input(type="email" class="form-control" id="email" name="email" required)
          
        .mb-3
          label(for="author" class="form-label") Author
          input(type="text" class="form-control" id="author" name="author" required)

        .mb-3
          label(for="book" class="form-label") Book
          input(type="text" class="form-control" id="book" name="book" required)
          
        .mb-3
          label(for="edition" class="form-label") Edition
          input(type="number" class="form-control" id="edition" name="edition" required)
          
        button(type="submit" class="btn btn-primary") Submit
